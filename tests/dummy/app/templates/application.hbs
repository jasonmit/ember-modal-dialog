<h1 id="title">Ember Modal Dialog</h1>

{{outlet}}

<div class='example'>
<h2>Basic</h2>
  <button {{action 'toggleBasic'}}>Do It</button>
  {{code-snippet name='basic.hbs'}}
  {{#if isShowingBasic}}
    {{#modal-dialog close='toggleBasic'}}
      <h1>Stop! Modal Time!</h1>
      <p>Basic</p>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example'>
  <h2>Centered with Translucent Overlay</h2>
  <button {{action 'toggleTranslucent'}}>Do It</button>
  {{code-snippet name='centered-with-translucent-overlay.hbs'}}
  {{#if isShowingTranslucent}}
    {{#modal-dialog close='toggleTranslucent'
                    alignment='center'
                    translucentOverlay=true}}
      <h1>Stop! Modal Time!</h1>
      <p>Centered with Translucent Overlay</p>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example'>
  <h2>Custom Styles</h2>
  <button {{action 'toggleCustomStyles'}}>Do It</button>
  {{code-snippet name='custom-styles.hbs'}}
  {{code-snippet name='custom-styles.scss'}}
  {{#if isShowingCustomStyles}}
    {{#modal-dialog close='toggleCustomStyles'
                    containerClassNames='custom-styles-modal-container'
                    overlayClassNames='custom-styles-modal' }}
      <h1>Stop! Modal Time!</h1>
      <p>Custom Styles</p>
    {{/modal-dialog}}
  {{/if}}
</div>
